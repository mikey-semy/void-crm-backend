# =============================================================================
# VOID CRM Backend - Конфигурация для локальной разработки
# =============================================================================
# Скопируйте этот файл в .env.dev и заполните значения
# cp .env.dev.example .env.dev
# =============================================================================

# -----------------------------------------------------------------------------
# ЛОГИРОВАНИЕ
# -----------------------------------------------------------------------------
LOG_FORMAT=pretty
# Варианты: pretty (цветной вывод), json, simple
LOG_FILE=./logs/app.log
LOG_LEVEL=DEBUG
# Варианты: DEBUG, INFO, WARNING, ERROR, CRITICAL

# -----------------------------------------------------------------------------
# СЕРВЕР
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
DEBUG=true

# -----------------------------------------------------------------------------
# БЕЗОПАСНОСТЬ И АУТЕНТИФИКАЦИЯ
# -----------------------------------------------------------------------------
# Секретный ключ для JWT токенов (ОБЯЗАТЕЛЬНО сгенерируйте свой!)
# Генерация: python -c "import secrets; print(secrets.token_urlsafe(64))"
TOKEN_SECRET_KEY=your_secret_key_here_generate_with_secrets_token_urlsafe_64

# API Key для внешних админок (опционально)
ADMIN_API_KEY=your_admin_api_key_here

# Пароль для доступа к Swagger UI документации
DOCS_PASSWORD=your_docs_password_here

# -----------------------------------------------------------------------------
# АДМИНИСТРАТОРЫ
# -----------------------------------------------------------------------------
# Дефолтный админ (создается при первом запуске)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PHONE=+79991234567
DEFAULT_ADMIN_PASSWORD=YourSecurePassword123!

# Дополнительные админы (опционально)
# Формат: username:email:phone:password,username2:email2:phone2:password2
# ADMINS=user1:user1@example.com:+79001234567:Password123!,user2:user2@example.com:+79007654321:Password456!

# -----------------------------------------------------------------------------
# POSTGRESQL
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=void_crm_db

# -----------------------------------------------------------------------------
# RABBITMQ
# -----------------------------------------------------------------------------
RABBITMQ_USER=admin
RABBITMQ_PASS=your_rabbitmq_password_here
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_UI_PORT=15672
RABBITMQ_EXCHANGE=void_crm
RABBITMQ_CONNECTION_TIMEOUT=60

# -----------------------------------------------------------------------------
# REDIS
# -----------------------------------------------------------------------------
REDIS_USER=default
REDIS_PASSWORD=your_redis_password_here
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DATABASE=0

# -----------------------------------------------------------------------------
# CORS (Cross-Origin Resource Sharing)
# -----------------------------------------------------------------------------
# JSON массив разрешенных origins для фронтенда
ALLOW_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
ALLOW_CREDENTIALS=true
ALLOW_METHODS=["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"]
ALLOW_HEADERS=["accept", "accept-encoding", "authorization", "content-type", "dnt", "origin", "user-agent", "x-csrftoken", "x-requested-with", "x-api-key", "manifest-fetch-site", "cache-control", "pragma"]

# -----------------------------------------------------------------------------
# ФИКСТУРЫ
# -----------------------------------------------------------------------------
# Загружать начальные данные при старте (true/false)
LOAD_FIXTURES=true

# -----------------------------------------------------------------------------
# AI / RAG НАСТРОЙКИ (опционально)
# -----------------------------------------------------------------------------
# OpenRouter API для эмбеддингов и LLM
# AI_OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# AI_RAG_DEFAULT_MODEL=openai/text-embedding-3-small
# AI_LLM_DEFAULT_MODEL=anthropic/claude-3-haiku
